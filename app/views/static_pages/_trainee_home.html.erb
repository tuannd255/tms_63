<%= link_to user_courses_path do %>
  <div class="col-md-6 col-xs-6 col-md-offset-3 col-xs-offset-3">
    <h2 class="help-1"><%= t :user_help1, name: current_user.name,
      count: current_user.courses.size %></h2>
    <%= image_tag t("arrow-1"), class: "arrow-1" %>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="text-center">
            <div class="huge"><%= current_user.courses.size %></div>
            <div> <%= t "courses.title" %> </div>
          </div>
        </div>
      </div>
      <div class="panel-footer center">
        <span class="pull-center"><%= t "home.view_detail" %></span>
        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>
<% end %>
