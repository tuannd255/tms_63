<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("home.content"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
          <% elsif current_user.supervisor? %>
            <li><%= link_to t("courses.title"), supervisor_courses_path %></li>
          <% else %>
            <li><%= link_to t("courses.title"), user_courses_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.role.capitalize %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("users.profile"), user_path(current_user) unless
                  current_user.admin? %>
              </li>
              <li>
                <%= link_to t(:log_out), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(:log_in), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
